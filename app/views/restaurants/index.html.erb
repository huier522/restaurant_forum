<h1>餐廳前台</h1>

<div class="container">
  <div class="row">

    <ul class="nav nav-pills">
      <li role="presentation" class="active"><%= link_to "全部餐廰", root_path %></li>
      <% @categories.each do |category| %>
        <li role="presentation"><%= link_to category.name, category_path(category) %></li>
      <% end %>
    </ul>

    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4">
        <div class="restaurant-item">
          <div>
            <%= image_tag restaurant.image, class: "img-reponsive center-block" %>
            <div class="caption">
              <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
              <p class="label label-default"><%= restaurant.category.name %></p>
              <p><%= truncate(restaurant.description, length: 80) %></p>
              <!-- truncate：可限制文字長度有幾個字母數以免網頁的排版失控 -->
            </div>  
          </div>
        </div>
      </div>
    <% end %>

    <div class="text-center">
      <%= paginate @restaurants %>
    </div>
    
  </div>
</div>
