<div class="container">
	<h1>餐廳後台</h1>

	<div class="row">

		<div class="col-md-12">

			<div>
				<%= link_to 'New Restaurant', new_admin_restaurant_path, class: "btn btn-primary" %>
			</div>

			<br>

			<table class="table table-striped table-bordered">
			<!-- <table class="table table-striped table-condensed"> -->
				<thead>
					<tr>
						<th>Restaurant ID</th>
						<th>Category</th>
						<th>Name</th>
						<th>Show</th>
						<th>Edit</th>
						<th>Delete</th>
					</tr>
				</thead>
					<tbody>
						<% @restaurants.each do |restaurant| %>
							<tr>
								<th scope="row"><%= restaurant.id %></th>
								<td>[<%= restaurant.category.name %>]</td>
								<td><%= restaurant.name %></td>
								<td>
									<%= link_to admin_restaurant_path(restaurant) do %>
										<span class="glyphicon glyphicon-info-sign"></span>
									<% end %>
								</td>
								<td>
									<%= link_to edit_admin_restaurant_path(restaurant) do %>
										<span class="glyphicon glyphicon-edit"></span>
									<% end %>
								</td>
								<td>
									<%= link_to admin_restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure?"} do %>
										<span class="glyphicon glyphicon-remove"></span>
									<% end %>
								</td>
							</tr>
						<% end %>
					</tbody>
			</table>

			<div class="text-center">
				<%= paginate @restaurants %>
			</div>

		</div>
	</div>
</div>