<h1>餐廳後台</h1>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>Name</th>
			<th>Show</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
		<tbody>
			<% @restaurants.each do |restaurant| %>
				<tr>
					<td><%= restaurant.name %></td>
					<td>
						<%= link_to admin_restaurant_path(restaurant) do %>
							<span class="glyphicon glyphicon-info-sign"></span>
						<% end %>
					</td>
					<td>
						<%= link_to edit_admin_restaurant_path(restaurant) do %>
							<span class="glyphicon glyphicon-edit"></span>
						<% end %>
					</td>
					<td>
						<%= link_to admin_restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure?"} do %>
							<span class="glyphicon glyphicon-remove"></span>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
</table>

<%= paginate @restaurants %>
<br>
<%= link_to new_admin_restaurant_path, class: "btn btn-success" do %>
	New Restaurant
<% end %>