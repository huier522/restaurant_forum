<div class="container">
  <div class="row">
		<% if @restaurant.errors.any? %>
    	<h2>We have some errors here !</h2>
				<ul>
						<% @restaurant.errors.full_messages.each do |msg| %>
								<li><%= msg %></li>
						<% end %>
				</ul>
				<hr>
		<% end %>

		<%= form_for [:admin, @restaurant] do |f| %>
			<div class="from-group">
				<%= f.label :catetory, "Category" %>
				<%= f.collection_select :category_id, Category.all, :id, :name, 
				{prompt: "請選擇"}, {class: "form-control"}  %>
			</div>
			<!-- 官方格式：collection_select(method, collection, value_method, text_method, options = {}, html_options = {}) -->

			<br>

			<div class="from-group">
				<%= f.label :name, "Name" %>
    		<%= f.text_field :name, class: "form-control" %>
			</div>

			<br>

			<div class="from-group">
				<%= f.label :tel, "Tel" %>
    		<%= f.text_field :tel, class: "form-control" %>
			</div>

			<br>

			<div class="from-group">
				<%= f.label :address, "Address" %>
    		<%= f.text_field :address, class: "form-control" %>
			</div>

			<br>

			<div class="from-group">
				<%= f.label :opening_hours, "Opening Hours" %>
    		<%= f.text_field :opening_hours, class: "form-control" %>
			</div>

			<br>

			<div class="from-group">
				<%= f.label :description, "Description" %>
    		<%= f.text_area :description, class: "form-control" %>
			</div>

			<br>

			<div class="from-group">
				<%= f.label :image, "Photo" %>
    		<%= image_tag @restaurant.image, width: '300px' if @restaurant.image? %>
    		<%= f.file_field :image %>
			</div>

			<br>

			<div class="from-group">
				<%= f.submit class: "btn btn-primary" %>
			</div>

		<% end %>
  </div>
</div>